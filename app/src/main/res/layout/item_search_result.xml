<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/imgRecipe"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/btnFavorite"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_search_bar"
            android:padding="6dp"
            android:src="@drawable/ic_favorite"
            app:tint="@color/text_grey"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/iconStar"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/ic_star"
            app:tint="@color/rating_gold"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgRecipe"/>

        <TextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.8"
            android:textColor="@color/text_dark"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/iconStar"
            app:layout_constraintTop_toTopOf="@id/iconStar"
            app:layout_constraintBottom_toBottomOf="@id/iconStar"/>

        <TextView
            android:id="@+id/tvRecipeTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Meal Name"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/text_dark"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@id/iconStar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iconStar"/>

        <ImageView
            android:id="@+id/iconTime"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/ic_time"
            app:tint="@color/text_grey"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="@id/tvRecipeTitle"
            app:layout_constraintTop_toBottomOf="@id/tvRecipeTitle"/>

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15m"
            android:textColor="@color/text_grey"
            android:textSize="11sp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/iconTime"
            app:layout_constraintTop_toTopOf="@id/iconTime"
            app:layout_constraintBottom_toBottomOf="@id/iconTime"/>

        <ImageView
            android:id="@+id/iconCal"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/ic_calories"
            app:tint="@color/text_grey"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/tvTime"
            app:layout_constraintTop_toTopOf="@id/iconTime"
            app:layout_constraintBottom_toBottomOf="@id/iconTime"/>

        <TextView
            android:id="@+id/tvCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="350 kcal"
            android:textColor="@color/text_grey"
            android:textSize="11sp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/iconCal"
            app:layout_constraintTop_toTopOf="@id/iconCal"
            app:layout_constraintBottom_toBottomOf="@id/iconCal"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>