<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <com.google.android.material.image.ShapeableImageView
            android:id="@+id/imgRecMeal"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_food_image"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.MaterialComponents.MediumComponent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tvRecName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Avocado &amp; Kale Salad"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/imgRecMeal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnFav"/>

        <TextView
            android:id="@+id/tvRecDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Healthy â€¢ Vegan"
            android:textColor="@color/text_grey"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@id/tvRecName"
            app:layout_constraintEnd_toEndOf="@id/tvRecName"
            app:layout_constraintTop_toBottomOf="@id/tvRecName"/>

        <TextView
            android:id="@+id/tvTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick"
            android:textColor="@color/chip_green_text"
            android:background="@color/chip_green_bg"
            android:textSize="10sp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/tvRecName"
            app:layout_constraintTop_toBottomOf="@id/tvRecDesc"/>

        <TextView
            android:id="@+id/tvRecTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ•’ 15m"
            android:textSize="12sp"
            android:textColor="@color/text_grey"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/tvTag"
            app:layout_constraintBottom_toBottomOf="@id/tvTag"
            app:layout_constraintTop_toTopOf="@id/tvTag"/>

        <ImageView
            android:id="@+id/btnFav"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_favorite"
            app:tint="@color/text_grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>