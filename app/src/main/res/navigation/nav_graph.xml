<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.foodplanner.presentation.splash.view.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >

        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_splashFragment_to_nav_home"
            app:destination="@id/nav_home"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.foodplanner.presentation.login.view.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/nav_home"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.foodplanner.presentation.signup.view.SignUpFragment"
        android:label="SignUpFragment"
        tools:layout="@layout/fragment_sign_up" />
        <action
            android:id="@+id/action_signUpFragment_to_homeFragment"
            app:destination="@id/nav_home"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.foodplanner.presentation.home.view.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_nav_home_to_mealDetailsFragment"
            app:destination="@id/mealDetailsFragment" />

        <action
            android:id="@+id/action_nav_home_to_categoryFragment"
            app:destination="@id/categoryFragment" />

    </fragment>

    <fragment
        android:id="@+id/nav_search"
        android:name="com.example.foodplanner.presentation.search.view.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search">

        <action
            android:id="@+id/action_nav_search_to_mealDetailsFragment"
            app:destination="@id/mealDetailsFragment" />

    </fragment>

    <fragment
        android:id="@+id/nav_favorite"
        android:name="com.example.foodplanner.presentation.favorite.view.FavoriteFragment"
        android:label="Favorites"
        tools:layout="@layout/fragment_favorite">

        <action
            android:id="@+id/action_nav_favorite_to_mealDetailsFragment"
            app:destination="@id/mealDetailsFragment" />

    </fragment>

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.foodplanner.presentation.profile.view.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">

        <action
            android:id="@+id/action_nav_profile_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/mealDetailsFragment"
        android:name="com.example.foodplanner.presentation.details.view.MealDetailsFragment"
        android:label="Meal Details"
        tools:layout="@layout/fragment_meal_details">

        <argument
            android:name="mealId"
            app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.example.foodplanner.presentation.category.view.CategoryFragment"
        android:label="Category"
        tools:layout="@layout/fragment_category">

        <argument
            android:name="categoryName"
            app:argType="string" />

        <action
            android:id="@+id/action_categoryFragment_to_mealDetailsFragment"
            app:destination="@id/mealDetailsFragment" />

    </fragment>

</navigation>